/* dashboard.css - Bedusec Admin Command Center */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Share Tech Mono', monospace;
    background: #0a0a0a;
    color: #00ff00;
    overflow: hidden;
}

.dashboard-container {
    display: flex;
    height: 100vh;
}

/* Cyber Sidebar */
.cyber-sidebar {
    width: 280px;
    background: linear-gradient(180deg, #001a00 0%, #000000 100%);
    border-right: 2px solid #00ff00;
    display: flex;
    flex-direction: column;
    box-shadow: 5px 0 15px rgba(0, 255, 0, 0.2);
}

.sidebar-header {
    padding: 2rem 1.5rem;
    border-bottom: 1px solid #00ff00;
    text-align: center;
}

.admin-avatar {
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, #00ff00, #0088ff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 2rem;
    color: #0a0a0a;
}

.sidebar-header h3 {
    color: #ffffff;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}

.status-indicator {
    color: #00ff00;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.status-indicator i {
    color: #00ff00;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* Sidebar Navigation */
.sidebar-nav {
    flex: 1;
    padding: 2rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    color: #88ff88;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    position: relative;
    border: 1px solid transparent;
}

.nav-item:hover {
    background: rgba(0, 255, 0, 0.1);
    color: #00ff00;
    border-left: 3px solid #00ff00;
}

.nav-item.active {
    background: rgba(0, 255, 0, 0.2);
    color: #00ff00;
    border-left: 3px solid #ff0080;
}

.nav-item i {
    width: 20px;
    text-align: center;
}

.nav-badge {
    background: #ff0080;
    color: #ffffff;
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.8rem;
    margin-left: auto;
}

/* Sidebar Footer */
.sidebar-footer {
    padding: 1.5rem;
    border-top: 1px solid #00ff00;
}

.system-stats {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.stat {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.stat span {
    font-size: 0.9rem;
    color: #88ff88;
}

.progress-bar {
    width: 100%;
    height: 6px;
    background: rgba(0, 255, 0, 0.2);
    border-radius: 3px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #00ff00, #0088ff);
    border-radius: 3px;
    transition: width 0.3s ease;
}

/* Dashboard Main */
.dashboard-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: radial-gradient(circle at top right, #001a00, #000000);
    overflow-y: auto;
}

/* Dashboard Header */
.dashboard-header {
    background: rgba(0, 30, 0, 0.9);
    padding: 1.5rem 2rem;
    border-bottom: 2px solid #00ff00;
    display: flex;
    justify-content: space-between;
    align-items: center;
    backdrop-filter: blur(10px);
}

.header-left h1 {
    color: #00ff00;
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
}

.datetime {
    color: #88ff88;
    font-size: 0.9rem;
}

.header-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.alert-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 0, 128, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    border: 1px solid #ff0080;
    color: #ff0080;
}

.cyber-btn {
    background: linear-gradient(45deg, #ff0080, #ff3399);
    color: #ffffff;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    font-family: 'Share Tech Mono', monospace;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
}

.cyber-btn:hover {
    background: linear-gradient(45deg, #ff3399, #ff66b2);
    box-shadow: 0 0 15px rgba(255, 0, 128, 0.5);
}

/* Dashboard Content */
.dashboard-content {
    flex: 1;
    padding: 2rem;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

/* Dashboard Grid */
.dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
}

.grid-card {
    background: rgba(0, 20, 0, 0.8);
    border: 1px solid #00ff00;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 5px 15px rgba(0, 255, 0, 0.1);
    backdrop-filter: blur(10px);
}

.grid-card.wide {
    grid-column: 1 / -1;
}

