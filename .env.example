# Bedusec Ultra Secure Server Configuration
NODE_ENV=production
PORT=3000

# Ultra Secure JWT Secrets (Generate strong secrets in production)
JWT_SECRET=generate_ultra_secure_64_byte_secret_here
ENCRYPTION_KEY=generate_32_byte_encryption_key_here

# Security Settings
ALLOWED_ORIGINS=https://your-bedusec-domain.com,https://www.your-bedusec-domain.com

# Database (Configure for production)
DATABASE_URL=mongodb://localhost:27017/bedusec_ultra_secure

# Monitoring
SECURITY_ALERT_EMAIL=security-alerts@bedusec.com
LOG_LEVEL=info

# Rate Limiting
MAX_LOGIN_ATTEMPTS=3
LOGIN_WINDOW_MS=900000
